# ================================
# Accounting API Configuration
# ================================

# ================================
# Server Configuration
# ================================
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Performance settings
REQUEST_TIMEOUT=30000
BODY_LIMIT=10485760
KEEP_ALIVE_TIMEOUT=30000
HEADERS_TIMEOUT=31000
TRUST_PROXY=false
DISABLE_REQUEST_LOGGING=false

# ================================
# Database Configuration
# ================================
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..B2LE_IvBu76r72SYEAs1X2XvcJUb8bzCauCAB4lbJoY"

# Database connection pool settings
DB_CONNECTION_LIMIT=10
DB_CONNECTION_TIMEOUT=10000
DB_QUERY_TIMEOUT=30000
DB_TRANSACTION_TIMEOUT=10000
DB_MAX_RETRIES=3

# Database logging
DB_ENABLE_QUERY_LOGGING=true
DB_SLOW_QUERY_THRESHOLD=1000

# ================================
# Logging Configuration
# ================================
LOG_LEVEL=info
LOG_PRETTY_PRINT=true
LOG_REQUESTS=true
LOG_RESPONSES=false

# ================================
# Security & Authentication
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-characters-long
JWT_EXPIRES_IN=24h

# Session configuration
SESSION_SECRET=your-session-secret-key-change-this-in-production-min-32-characters
SESSION_MAX_AGE=86400000

# Security headers
ENABLE_HSTS=false
ENABLE_CSP=true

# ================================
# CORS Configuration
# ================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
ENABLE_CORS=true

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=1 minute
RATE_LIMIT_SKIP_ON_ERROR=true

# ================================
# Redis Configuration (Optional)
# ================================
# REDIS_URL=redis://localhost:6379
# REDIS_CONNECT_TIMEOUT=10000
# REDIS_LAZY_CONNECT=true
# REDIS_RETRY_DELAY=100
# REDIS_MAX_RETRIES=3
# CACHE_DEFAULT_TTL=300
# REDIS_KEY_PREFIX=accounting-api:

# ================================
# Feature Flags
# ================================
# API versioning
ENABLE_API_V1=true
ENABLE_API_V2=false

# Monitoring and metrics
ENABLE_METRICS=false
ENABLE_HEALTH_CHECK=true

# Performance features
ENABLE_COMPRESSION=true
COMPRESSION_THRESHOLD=1024

# Development features
ENABLE_SWAGGER=true

# Database features
ENABLE_QUERY_LOGGING=true
ENABLE_SLOW_QUERY_LOGGING=true

