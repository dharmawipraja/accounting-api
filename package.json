{
  "name": "accounting-api",
  "description": "Accounting API",
  "license": "ISC",
  "version": "1.0.0",
  "type": "module",
  "author": "I Made Budi Dharma Wipraja <dharmawipraja@gmail.com>",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "prod": "NODE_ENV=production pm2 start ecosystem.config.json",
    "stop": "pm2 stop accounting-api",
    "restart": "pm2 restart accounting-api",
    "logs": "pm2 logs accounting-api",
    "monitor": "pm2 monit",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate --no-engine",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:reset": "prisma migrate reset",
    "prisma:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:lint": "npm run format && npm run lint:fix",
    "logs:cleanup": "node scripts/cleanup-logs.js"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "decimal.js": "^10.5.0",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.9.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^13.1.1",
    "pino-roll": "^3.1.0",
    "prisma-extension-soft-delete": "^2.0.1",
    "response-time": "^2.3.2",
    "ulid": "^3.0.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^6.13.0",
    "supertest": "^7.1.4",
    "vitest": "^3.2.4"
  }
